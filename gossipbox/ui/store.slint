export struct ChatItem {
    type: string,
    text: string,
    img: image,
    img-path: string,
}

export struct ChatSession {
    uuid: string,
    name: string,
    avatar: image,
    status: string,
    unread-count: int,
    timestamp: string,
    chat-items: [ChatItem]
}

export struct MessageItem {
    text: string,
    text-type: string,
}

export struct OkCancelDialogSetting {
    title-type: string,
    title-text: string,
    body-text: string,
    handle-type: string,
    handle-uuid: string,
}

export struct SettingUI {
    font-size: string,
    font-family: string,
    win-width: string,
    win-height: string,
    language: string,
}

export struct SettingChat {
    user-name: string,
    user-status: string,
    user-avatar: image,

    cache-size: string,
}

export struct SettingDialogConfig {
    show: bool,
    ui: SettingUI,
    chat: SettingChat,
}

export struct AboutDialog {
    show: bool,
    title: string,
    text: string,
    sponsor: string,
}

